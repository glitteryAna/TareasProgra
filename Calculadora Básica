import java.util.Scanner;
public class Anavers3 {
    public static <S> void main (String [] args){
        Scanner sc = new Scanner(System.in);

        int suma;
        int resta;
        int division;
        int multiplicacion;

        System.out.println("Bienvenido a mi programa de cálculos");
        System.out.println("Ingresa un número: ");
        int numero1=sc.nextInt();
        System.out.println("Ingresa otro número: ");
        int numero2=sc.nextInt();
        System.out.println("¿Qué te gustaría hacer con esos números?");
        System.out.println("1. Sumarlos");
        System.out.println("2. Restarlos");
        System.out.println("3. Dividirlos");
        System.out.println("4. Multiplicarlos");
        System.out.print("Ingresa el número de la opción: ");
        int numero = sc.nextInt();

switch (numero) {
    case 1:
        suma = numero1+numero2;
        System.out.println("La respuesta es: "+suma);
        break;
    case 2:
        resta = numero1-numero2;
        System.out.println("La respuesta es: "+resta);
        break;
    case 3:
        division = numero1/numero2;
        System.out.println("La respuesta es: "+division);
        break;
    case 4:
        multiplicacion = numero1*numero2;
        System.out.println("La respuesta es: "+multiplicacion);
        break;
    default:
        System.out.println("Número no reconocido, vuelve a intentarlo");
}
    }
}
